{
  "name": "onion-tears",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript complexity analysis monorepo",
  "keywords": [
    "complexity",
    "cyclomatic",
    "cognitive",
    "typescript",
    "analysis",
    "monorepo"
  ],
  "license": "ISC",
  "author": "",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @onion-tears/core dev",
    "test": "pnpm -r test",
    "lint": "oxlint .",
    "format": "oxfmt -c oxfmt.json packages",
    "cli": "tsx packages/cli/src/cli.ts",
    "cli:link": "cd packages/cli && pnpm link --global",
    "package:vscode": "pnpm --filter onion-tears package",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.15.0",
    "oxlint": "^1.30.0",
    "tsx": "^4.20.6"
  }
}
